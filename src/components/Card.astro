---
// Componente Card reutilizable
interface Props {
  title?: string;
  description?: string;
  icon?: string;
  variant?: 'default' | 'highlight' | 'minimal';
  class?: string;
}

const { title, description, icon, variant = 'default', class: className } = Astro.props;

const variantStyles = {
  default: 'bg-white border-2 border-[#c7dfdf] hover:border-[#0f615f] shadow-[0_10px_18px_rgba(12,43,43,0.06)]',
  highlight: 'bg-gradient-to-br from-[#eef6f6] to-[#cbdcdd] border-2 border-[#0f615f]',
  minimal: 'bg-transparent border-2 border-[#c7dfdf] hover:bg-[#eef6f6]',
};

const classes = `rounded-[14px] p-6 transition-all duration-200 ${variantStyles[variant]} ${className || ''}`;
---

<div class={classes}>
  {icon && (
    <div class="mb-4 text-3xl">
      {icon}
    </div>
  )}
  {title && (
    <h3 class="text-xl font-bold text-[#0b0b0b] mb-2">
      {title}
    </h3>
  )}
  {description && (
    <p class="text-[#6b7c7c] leading-relaxed">
      {description}
    </p>
  )}
  {!title && !description && !icon && (
    <slot />
  )}
</div>
