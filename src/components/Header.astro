---
// Componente Header/Navegación
interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Inicio', href: '#' },
  { label: 'Soluciones', href: '#solutions' },
  { label: 'Vacantes', href: '#vacancies' },
  { label: 'Contacto', href: '#contact' },
];
---

<header class="sticky top-0 z-50 bg-white border-b-2 border-[#c7dfdf] shadow-[0_4px_12px_rgba(12,43,43,0.1)]">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#0f615f] to-[#2d7a79] flex items-center justify-center text-white font-bold">
        HL
      </div>
      <span class="font-bold text-lg text-[#0f615f]">Hexa-Link</span>
    </div>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center space-x-8">
      {navLinks.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="text-[#0b0b0b] font-medium hover:text-[#0f615f] transition-colors duration-200"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- CTA Buttons -->
    <div class="flex items-center space-x-3">
      <a 
        href="/login" 
        class="text-[#0f615f] px-4 py-2 rounded-lg font-medium hover:bg-[#eef6f6] transition-colors duration-200"
      >
        Inicia Sesión
      </a>
      <button class="bg-[#0f615f] text-white px-6 py-2 rounded-lg font-medium hover:bg-[#2d7a79] transition-colors duration-200">
        Probar Gratis
      </button>
    </div>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-[#0b0b0b] text-2xl">☰</button>
  </nav>
</header>

<style>
  header {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
