---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Login - HexaLink ERP">
  <style>
    .login-page {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .login-container {
      background: #1e293b;
      border: 1px solid #334155;
      border-radius: 20px;
      padding: 3rem;
      max-width: 500px;
      width: 100%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    .login-header {
      text-align: center;
      margin-bottom: 2.5rem;
    }

    .login-logo {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .login-header h1 {
      color: #f1f5f9;
      font-size: 1.8rem;
      margin: 0 0 0.5rem 0;
    }

    .login-header p {
      color: #cbd5e1;
      margin: 0;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      color: #cbd5e1;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .form-group input {
      width: 100%;
      padding: 0.85rem;
      background: #0f172a;
      border: 2px solid #334155;
      border-radius: 8px;
      color: #f1f5f9;
      font-size: 1rem;
      transition: all 0.3s;
      box-sizing: border-box;
    }

    .form-group input:focus {
      outline: none;
      border-color: #0d9488;
      box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
    }

    .form-group input::placeholder {
      color: #64748b;
    }

    .remember-forgot {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      font-size: 0.9rem;
    }

    .remember-forgot label {
      color: #cbd5e1;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
    }

    .remember-forgot input[type="checkbox"] {
      cursor: pointer;
      width: auto;
    }

    .forgot-password {
      color: #0d9488;
      text-decoration: none;
      transition: color 0.3s;
    }

    .forgot-password:hover {
      color: #0e7490;
      text-decoration: underline;
    }

    .btn-login {
      width: 100%;
      padding: 0.9rem;
      background: linear-gradient(90deg, #0d9488 0%, #0e7490 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s;
      margin-bottom: 1rem;
    }

    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(13, 148, 136, 0.3);
    }

    .btn-login:active {
      transform: translateY(0);
    }

    .divider {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin: 1.5rem 0;
      color: #64748b;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: #334155;
    }

    .btn-social {
      width: 100%;
      padding: 0.8rem;
      border: 2px solid #334155;
      background: transparent;
      color: #cbd5e1;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
      margin-bottom: 0.8rem;
    }

    .btn-social:hover {
      border-color: #0d9488;
      background: rgba(13, 148, 136, 0.1);
    }

    .login-footer {
      text-align: center;
      margin-top: 1.5rem;
      color: #cbd5e1;
    }

    .login-footer a {
      color: #0d9488;
      text-decoration: none;
      font-weight: 600;
    }

    .login-footer a:hover {
      text-decoration: underline;
    }

    .demo-credentials {
      background: #0f172a;
      border: 1px solid #334155;
      border-radius: 8px;
      padding: 1rem;
      margin-top: 1.5rem;
      font-size: 0.85rem;
      color: #cbd5e1;
    }

    .demo-credentials strong {
      color: #0d9488;
    }

    .alert-info {
      background: rgba(13, 148, 136, 0.1);
      border: 1px solid #0d9488;
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      color: #cbd5e1;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .login-container {
        padding: 2rem 1.5rem;
      }

      .login-header h1 {
        font-size: 1.5rem;
      }
    }
  </style>

  <div class="login-page">
    <div class="login-container">
      <div class="login-header">
        <div class="login-logo">üîê</div>
        <h1>HexaLink ERP</h1>
        <p>Sistema de Gesti√≥n de Recursos Humanos</p>
      </div>

      <div class="alert-info">
        ‚ÑπÔ∏è Sistema de demostraci√≥n. Usa las credenciales de prueba a continuaci√≥n.
      </div>

      <form id="loginForm">
        <div class="form-group">
          <label for="email">Email o Usuario</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="juan.perez@hexalink.com"
            value="juan.perez@hexalink.com"
            required
          >
        </div>

        <div class="form-group">
          <label for="password">Contrase√±a</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            value="demo123"
            required
          >
        </div>

        <div class="remember-forgot">
          <label>
            <input type="checkbox" name="remember">
            Recu√©rdame
          </label>
          <a href="#" class="forgot-password">¬øOlvidaste tu contrase√±a?</a>
        </div>

        <button type="submit" class="btn-login">Iniciar Sesi√≥n</button>
      </form>

      <div class="divider">O</div>

      <button class="btn-social" onclick="alert('Google login (a implementar)')">
        üîµ Continuar con Google
      </button>

      <button class="btn-social" onclick="alert('Microsoft login (a implementar)')">
        üü¶ Continuar con Microsoft
      </button>

      <div class="login-footer">
        ¬øNo tienes cuenta? <a href="#">Solicita acceso aqu√≠</a>
      </div>

      <div class="demo-credentials">
        <strong>üë• Credenciales de Demostraci√≥n:</strong>
        <div style="margin-top: 0.5rem; line-height: 1.6;">
          <div><strong>Admin:</strong> admin@hexalink.com / demo123</div>
          <div><strong>HR Manager:</strong> hr@hexalink.com / demo123</div>
          <div><strong>Employee:</strong> juan.perez@hexalink.com / demo123</div>
          <div><strong>Candidate:</strong> candidate@hexalink.com / demo123</div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    const form = document.getElementById('loginForm');
    
    form?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const emailField = document.getElementById('email');
      const passwordField = document.getElementById('password');
      
      if (!emailField || !passwordField) return;
      
      const email = emailField.value?.trim() || '';
      const password = passwordField.value?.trim() || '';
      
      if (!email || !password) {
        alert('Por favor ingresa email y contrase√±a');
        return;
      }
      
      let role = 'employee';
      let redirectUrl = '/my-profile';
      
      const lowerEmail = email.toLowerCase();
      if (lowerEmail.includes('admin')) {
        role = 'admin';
        redirectUrl = '/admin-dashboard';
      } else if (lowerEmail.includes('hr')) {
        role = 'hr';
        redirectUrl = '/manage-employees';
      } else if (lowerEmail.includes('candidate')) {
        role = 'candidate';
        redirectUrl = '/vacancies-public';
      }
      
      // Save to localStorage (persists across page reloads)
      try {
        const userData = { email, role };
        localStorage.setItem('authToken', JSON.stringify(userData));
        localStorage.setItem('isAuthenticated', '1');
        console.log('‚úÖ Auth saved:', email);
        
        // Redirect after tiny delay
        setTimeout(() => {
          window.location.replace(redirectUrl);
        }, 10);
      } catch (err) {
        console.error('Login error:', err);
        alert('Error al iniciar sesi√≥n');
      }
    });
  </script>
</BaseLayout>
