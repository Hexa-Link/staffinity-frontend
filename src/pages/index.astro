            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(13, 148, 136, 0.3);
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #d1fae5 0%, #e6f7f5 50%, #ffffff 100%);
            padding: 140px 5% 100px;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 800px;
            height: 800px;
