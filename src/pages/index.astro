            background: #1e293b;
        }

        body.dark-mode .hero {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        }

        body.dark-mode .hero-text h1,
        body.dark-mode .section-title h2,
        body.dark-mode .about-card h3,
        body.dark-mode .solution-card h3,
        body.dark-mode .vacancy-card h3,
        body.dark-mode .contact-info h3,
        body.dark-mode .contact-item-text h4 {
            color: #f1f5f9;
        }

        body.dark-mode .hero-text p,
        body.dark-mode .section-title p,
        body.dark-mode .about-card p,
        body.dark-mode .vacancy-card p,
        body.dark-mode .contact-info p,
        body.dark-mode .contact-item-text p {
            color: #cbd5e1;
        }

        body.dark-mode .about,
        body.dark-mode .vacancies {
            background: #0f172a;
        }

        body.dark-mode .about-card,
        body.dark-mode .vacancy-card {
            background: #1e293b;
            border-color: #334155;
        }

        body.dark-mode .about-card:hover,
        body.dark-mode .vacancy-card:hover {
            border-color: #0d9488;
        }

        body.dark-mode .solutions,
