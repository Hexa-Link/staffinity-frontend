---
// Página principal - Home
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Solutions from '../components/Solutions.astro';
import Vacancies from '../components/Vacancies.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Hexa-Link ERP - Gestión Empresarial Moderna">
  <Header />
  <Hero 
    title="Gestión Empresarial Moderna"
    subtitle="Sistema ERP Integrado"
    description="Transforma tu organización con nuestra plataforma ERP de última generación, diseñada para maximizar eficiencia y productividad."
    primaryCtaLabel="Comienza Ahora"
    secondaryCtaLabel="Solicita una Demo"
  />
  <Solutions />
  <Vacancies />
  <Footer />
</BaseLayout>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }
</style>
