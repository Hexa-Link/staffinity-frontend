            gap: 3rem;
            margin-top: 3rem;
        }

        .about-card {
            text-align: center;
            padding: 2.5rem;
            background: #f7fefd;
            border-radius: 20px;
            border: 1px solid #ccfbf1;
            transition: all 0.3s;
        }

        .about-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(13, 148, 136, 0.1);
        }

        .about-icon {
