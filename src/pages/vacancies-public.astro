      flex-direction: column;
      gap: 0.5rem;
      flex: 1;
      min-width: 200px;
    }

    .filter-label {
      color: #4a5568;
      font-weight: 600;
      font-size: 0.9rem;
    }

    .filter-input,
    .filter-select {
      padding: 0.75rem;
      border: 2px solid #ccfbf1;
      border-radius: 10px;
      font-size: 1rem;
      color: #2d3748;
      background: white;
      transition: border-color 0.3s;
    }

    .filter-input:focus,
    .filter-select:focus {
      outline: none;
      border-color: #0d9488;
    }

    .btn-search {
      background: #0d9488;
      color: white;
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      white-space: nowrap;
    }

    .btn-search:hover {
      background: #0e7490;
      transform: translateY(-2px);
    }

    .vacancies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .vacancy-card {
      background: #f7fefd;
      padding: 2.5rem;
      border-radius: 20px;
      border: 2px solid #ccfbf1;
      transition: all 0.3s;
      position: relative;
      display: flex;
      flex-direction: column;
    }

    .vacancy-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 50px rgba(13, 148, 136, 0.15);
      border-color: #0d9488;
    }

    .vacancy-badge {
      position: absolute;
      top: 20px;
      right: 20px;
      background: #0d9488;
      color: white;
      padding: 0.4rem 1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .vacancy-badge.new {
      background: #3b82f6;
    }

    .vacancy-badge.urgent {
      background: #ef4444;
    }

    .vacancy-card h3 {
      font-size: 1.5rem;
      color: #1a202c;
      margin: 0 0 1rem 0;
      padding-right: 80px;
    }

    .vacancy-meta {
      display: flex;
      flex-direction: column;
      gap: 0.7rem;
      margin: 1.5rem 0;
      flex: 1;
    }

    .vacancy-meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #718096;
      font-size: 0.95rem;
    }

    .vacancy-meta-item strong {
      color: #4a5568;
    }

    .vacancy-card p {
      color: #718096;
      line-height: 1.6;
      margin: 1rem 0;
      flex: 1;
    }

    .vacancy-btn {
      background: #0d9488;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 50px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      margin-top: auto;
      font-size: 1rem;
      width: 100%;
    }

    .vacancy-btn:hover {
      background: #0e7490;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(13, 148, 136, 0.3);
    }

    .pagination {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 3rem;
    }

    .pagination button {
      background: white;
      color: #0d9488;
      border: 2px solid #ccfbf1;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
    }

    .pagination button:hover,
    .pagination button.active {
      background: #0d9488;
      color: white;
      border-color: #0d9488;
    }

    .no-results {
      text-align: center;
