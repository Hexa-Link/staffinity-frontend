---
// P√°gina: Vacaciones - Vista de Empleado/HR
import DashboardLayout from '../layouts/DashboardLayout.astro';
import DataTableStaffinity from '../components/DataTableStaffinity.astro';

// Datos simulados - Replace con API call
const vacationColumns = [
  { key: 'startDate', label: 'Fecha Inicio', sortable: true },
  { key: 'endDate', label: 'Fecha Fin', sortable: true },
  { key: 'days', label: 'D√≠as', sortable: false },
  { key: 'year', label: 'A√±o', sortable: true },
  { key: 'status', label: 'Estado', sortable: true },
  { key: 'actions', label: 'Acciones', sortable: false },
];

const vacationRows = [
  {
    id: '1',
    startDate: '2025-12-20',
    endDate: '2025-12-27',
    days: '7',
    year: '2025',
    status: '‚úì Aprobado',
    actions: 'Ver | ‚úï Cancelar',
  },
  {
    id: '2',
    startDate: '2026-01-05',
    endDate: '2026-01-12',
    days: '7',
    year: '2026',
    status: '‚è± Pendiente',
    actions: 'Ver',
  },
  {
    id: '3',
    startDate: '2026-02-01',
    endDate: '2026-02-05',
    days: '4',
    year: '2026',
    status: '‚úó Rechazado',
    actions: 'Ver',
  },
];
---

<DashboardLayout title="Mis Vacaciones - HexaLink ERP">
  <style>
    .vacations-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .vacations-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .vacations-header h1 {
      color: #f1f5f9;
      font-size: 2rem;
      margin: 0;
    }

    .btn-solicitar {
      background: #0d9488;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
      font-size: 1rem;
    }

    .btn-solicitar:hover {
      background: #0e7490;
      transform: translateY(-2px);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: #1e293b;
      border: 1px solid #334155;
      border-radius: 12px;
      padding: 1.5rem;
    }

    .stat-label {
      color: #94a3b8;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      color: #0d9488;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .stat-detail {
      color: #cbd5e1;
      font-size: 0.875rem;
    }

    .status-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .status-approved {
      background: #22c55e;
      color: white;
    }

    .status-pending {
      background: #f59e0b;
      color: white;
    }

    .status-rejected {
      background: #ef4444;
      color: white;
    }

    @media (max-width: 768px) {
      .vacations-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .btn-solicitar {
        width: 100%;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="vacations-container">
    <!-- Header -->
    <div class="vacations-header">
      <h1>Mis Vacaciones</h1>
      <button class="btn-solicitar">+ Solicitar Vacaciones</button>
    </div>

    <!-- Statistics -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-label">Saldo Disponible</div>
        <div class="stat-value">12</div>
        <div class="stat-detail">d√≠as de vacaciones</div>
      </div>

      <div class="stat-card">
        <div class="stat-label">Utilizadas Este A√±o</div>
        <div class="stat-value">7</div>
        <div class="stat-detail">de 30 d√≠as anuales</div>
      </div>

      <div class="stat-card">
        <div class="stat-label">Pendientes de Aprobaci√≥n</div>
        <div class="stat-value">1</div>
        <div class="stat-detail">solicitud en proceso</div>
      </div>
    </div>

    <!-- Table -->
    <DataTableStaffinity 
      title="Historial de Vacaciones"
      columns={vacationColumns}
      rows={vacationRows}
    />
  </div>

  <script>
    // Modal functionality
    document.querySelector('.btn-solicitar')?.addEventListener('click', () => {
      alert('üìã Abre modal de solicitud de vacaciones (pr√≥ximamente)');
    });

    // Cancel vacation handler
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.textContent?.includes('Cancelar')) {
        const confirmed = confirm('¬øEst√°s seguro que deseas cancelar estas vacaciones?');
        if (confirmed) {
          alert('‚úÖ Vacaciones canceladas. Se notificar√° al √°rea de recursos humanos.');
          (target.closest('tr') as HTMLElement)?.remove();
        }
      }
    });
  </script>
</DashboardLayout>
