      const tabBtns = tabsContainer.querySelectorAll('.tab-btn');
      const parentCard = tabsContainer.closest('.vacancy-card');

      tabBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const tabType = (btn as HTMLElement).dataset.tabType;

          // Update active tab button
          tabBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');

          // Update active tab content
          const tabContents = parentCard?.querySelectorAll('.tab-content');
          tabContents?.forEach(content => {
            if ((content as HTMLElement).dataset.tabId === tabType) {
              content.classList.add('active');
            } else {
              content.classList.remove('active');
            }
          });
        });
      });
    });

    // Associate buttons
    const associateButtons = document.querySelectorAll('.btn-associate-candidate, .btn-associate-employee');
    associateButtons.forEach(btn => {
