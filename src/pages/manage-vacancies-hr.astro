          alert('üîß Funci√≥n de edici√≥n (pr√≥ximamente)');
        } else if (text?.includes('Estad√≠sticas')) {
          alert('üìä Ver estad√≠sticas de candidatos (pr√≥ximamente)');
        } else if (text?.includes('Cerrar')) {
          alert('¬øSeguro que deseas cerrar esta vacante?');
        } else if (text?.includes('Hist√≥rico')) {
          alert('üìã Hist√≥rico de candidatos (pr√≥ximamente)');
        } else if (text?.includes('Reabrir')) {
          alert('üîÑ Vacante reabierta exitosamente');
        }
      });
    });

    // Filter functionality
    const btnSearch = document.getElementById('btnSearch');
    const btnReset = document.getElementById('btnReset');

    btnSearch?.addEventListener('click', () => {
      const searchTerm = (document.getElementById('searchVacancy') as HTMLInputElement)?.value;
      alert(`üîç Buscando: "${searchTerm}"`);
    });

    btnReset?.addEventListener('click', () => {
      (document.getElementById('searchVacancy') as HTMLInputElement).value = '';
      (document.getElementById('filterDept') as HTMLSelectElement).value = '';
      (document.getElementById('filterStatus') as HTMLSelectElement).value = '';
      alert('‚úÖ Filtros limpiados');
