      transform: translateY(-2px);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: #1e293b;
      border: 2px solid #334155;
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
    }

    .stat-number {
      color: #0d9488;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      color: #cbd5e1;
      font-size: 0.9rem;
    }

    .filters-section {
      background: #1e293b;
      border: 1px solid #334155;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .filters-title {
      color: #f1f5f9;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .filters-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
    }

    .filter-group label {
      color: #cbd5e1;
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
    }

    .filter-group input,
    .filter-group select {
      padding: 0.75rem;
      background: #0f172a;
      border: 1px solid #334155;
      border-radius: 8px;
      color: #f1f5f9;
      font-size: 0.95rem;
    }

    .filter-group input:focus,
    .filter-group select:focus {
      outline: none;
      border-color: #0d9488;
    }

    .filter-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
    }

    .btn-search {
      background: #0d9488;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
    }

    .btn-search:hover {
      background: #0e7490;
    }

    .btn-reset {
      background: #334155;
      color: #cbd5e1;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
    }

    .btn-reset:hover {
      background: #475569;
    }

    .vacancies-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .vacancy-card {
      background: #1e293b;
      border: 1px solid #334155;
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s;
    }

    .vacancy-card:hover {
      border-color: #0d9488;
      box-shadow: 0 0 20px rgba(13, 148, 136, 0.2);
    }

    .vacancy-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 1rem;
    }

    .vacancy-title {
      color: #f1f5f9;
      font-size: 1.3rem;
      font-weight: 700;
      margin: 0;
    }

    .vacancy-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
      color: white;
    }

