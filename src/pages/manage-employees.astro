---

<DashboardLayout title="Gestión de Empleados - HexaLink ERP">
  <style>
    .employees-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 2rem;
    }

    .employees-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .employees-header h1 {
      color: #f1f5f9;
      font-size: 2rem;
      margin: 0;
    }

    .header-actions {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn-new {
      background: #0d9488;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s;
      font-size: 1rem;
    }

    .btn-new:hover {
      background: #0e7490;
      transform: translateY(-2px);
    }

    .search-bar {
      flex: 1;
      min-width: 250px;
      display: flex;
      gap: 0.5rem;
    }

    .search-input {
      flex: 1;
      background: #0f172a;
      border: 1px solid #334155;
      color: #f1f5f9;
      padding: 0.75rem 1rem;
      border-radius: 6px;
      font-size: 1rem;
      transition: border-color 0.3s;
    }

    .search-input:focus {
      outline: none;
      border-color: #0d9488;
    }

    .search-input::placeholder {
      color: #64748b;
    }

    .filters {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .filter-label {
      color: #94a3b8;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .filter-select {
      background: #0f172a;
      border: 1px solid #334155;
      color: #f1f5f9;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .filter-select:focus {
      outline: none;
      border-color: #0d9488;
    }

    .status-active {
      color: #22c55e;
    }

    .status-vacation {
      color: #f59e0b;
    }

    .status-inactive {
      color: #6b7280;
    }

    @media (max-width: 1024px) {
      .employees-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .header-actions {
        width: 100%;
        flex-direction: column;
      }

      .btn-new,
      .search-input {
        width: 100%;
      }

      .search-bar {
        width: 100%;
        flex-direction: column;
      }

      .filters {
        flex-direction: column;
      }

      .filter-group {
        width: 100%;
      }

      .filter-select {
        width: 100%;
      }
    }
  </style>

  <div class="employees-container">
    <!-- Header -->
    <div class="employees-header">
      <h1>Gestión de Empleados</h1>
      <div class="header-actions">
        <button class="btn-new">+ Nuevo Empleado</button>
        <div class="search-bar">
          <input 
            type="text" 
            class="search-input" 
            placeholder="Buscar empleado por nombre o email..."
          >
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="filters">
      <div class="filter-group">
        <label class="filter-label">Departamento</label>
        <select class="filter-select">
          <option value="">Todos</option>
          <option value="engineering">Engineering</option>
          <option value="hr">HR</option>
          <option value="marketing">Marketing</option>
          <option value="finance">Finance</option>
        </select>
      </div>

      <div class="filter-group">
        <label class="filter-label">Estado</label>
        <select class="filter-select">
          <option value="">Todos</option>
          <option value="active">Activo</option>
          <option value="vacation">En Vacaciones</option>
          <option value="inactive">Inactivo</option>
        </select>
      </div>

      <div class="filter-group">
        <label class="filter-label">Ordenar por</label>
        <select class="filter-select">
          <option value="name">Nombre (A-Z)</option>
          <option value="date">Fecha de Ingreso</option>
          <option value="department">Departamento</option>
        </select>
      </div>
    </div>

    <!-- Table -->
    <DataTableStaffinity 
      title="Listado de Empleados"
      columns={employeeColumns}
      rows={employeeRows}
      actions={employeeActions}
    />
  </div>

  <!-- Scripts -->
  <script>
    document.querySelector('.btn-new')?.addEventListener('click', () => {
      alert('Modal de nuevo empleado (a implementar)');
    });

    document.querySelectorAll('.search-input, .filter-select').forEach(el => {
      el.addEventListener('change', () => {
        console.log('Filtro/búsqueda actualizado');
      });
    });

    // Mostrar/ocultar botón Eliminar según rol
    // HR no puede eliminar, solo Admin
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const authData = localStorage.getItem('authToken');
        if (authData) {
          const user = JSON.parse(authData);
          const role = user.role || 'employee';
          
          // Si NO es admin, ocultar botones de eliminar
          if (role !== 'admin') {
            document.querySelectorAll('.data-table-action-danger').forEach(btn => {
              if (btn.textContent?.trim() === 'Eliminar') {
                (btn as HTMLElement).style.display = 'none';
              }
            });
          }
        }
      } catch (e) {
        console.log('Error verificando rol:', e);
      }
    });
  </script>
</DashboardLayout>
