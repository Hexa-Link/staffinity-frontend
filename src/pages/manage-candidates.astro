            </td>
            <td style="padding: 1rem; display: flex; gap: 0.5rem;">
              <button style="background: #0d9488; color: white; border: none; padding: 0.4rem 0.8rem; border-radius: 6px; cursor: pointer; font-size: 0.85rem;">üìÑ</button>
              <button style="background: #0d9488; color: white; border: none; padding: 0.4rem 0.8rem; border-radius: 6px; cursor: pointer; font-size: 0.85rem;">üìû</button>
              <button style="background: #ef4444; color: white; border: none; padding: 0.4rem 0.8rem; border-radius: 6px; cursor: pointer; font-size: 0.85rem;">‚úï</button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <script>
    document.querySelector('.btn-new')?.addEventListener('click', () => {
      alert('Modal para agregar nuevo candidato (a implementar)');
    });

    document.querySelector('.btn-search')?.addEventListener('click', () => {
      console.log('Buscar candidatos');
    });

    // Control de permisos seg√∫n rol
    // HR y Admin pueden gestionar candidatos
    // Solo Admin puede eliminar definitivamente (el ‚úï rojo)
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const authData = localStorage.getItem('authToken');
        if (authData) {
          const user = JSON.parse(authData);
          const role = user.role || 'employee';
          
          // Si NO es admin, el bot√≥n ‚úï (rechazar/eliminar) cambia su comportamiento
          if (role !== 'admin') {
            // Para HR el ‚úï rechaza pero no elimina definitivamente
            document.querySelectorAll('button').forEach(btn => {
              if (btn.textContent?.trim() === '‚úï') {
                btn.title = 'Rechazar candidato';
                btn.addEventListener('click', (e) => {
                  e.preventDefault();
                  alert('Candidato marcado como Rechazado (no eliminado del sistema)');
                });
              }
            });
          }
        }
      } catch (e) {
        console.log('Error verificando rol:', e);
      }
    });
  </script>
